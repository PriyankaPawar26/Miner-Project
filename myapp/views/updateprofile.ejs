<% include adminHeader %>

<form style="margin-left: 100px;" action="/admin/updateprofile" method="post">
    <div class="container"> 
        <h2><span>Edit Profile</span></h2><br>
     
     
     
     <input type="text" placeholder="Enter name" class="form-control" name="name" id="name">
     
     
     <input type="text" placeholder="Enter Email" class="form-control" name="email" id="email" required>
 
     <input type="number" placeholder="Enter contact number" class="form-control" name="number" id="number" required>
     
     <input type="password" placeholder="Enter Password" class="form-control" name="psw" id="psw" required>
 
     
     <input type="password" placeholder="Repeat Password" class="form-control" name="psw-repeat" id="psw-repeat" required>

     
     <input type="text" class="form-control" name="city" id="city"  placeholder="Enter city">

     <label for="address"><b>Address</b></label><br>
     <textarea name="address"  class="form-control" id="" cols="30" rows="5"></textarea><br>

     <div class="mb-3">
       <label for="exampleInputEmail1" class="form-label">Gender</label>
       <div class="form-check">
           <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" checked="Male" value="male">
           <label class="form-check-label" for="flexRadioDefault1">
             Male
           </label>
         </div><div class="form-check">
           <input class="form-check-input" type="radio" name="gender" 
           id="flexRadioDefault1" value="female">
           <label class="form-check-label" for="flexRadioDefault1">
             Female
           </label>
         </div>
   </div>

   <div class="mb-3">
     <label for="exampleInputEmail1" class="form-label">Proffesion</label>
     <div class="form-check">
         <input class="form-check-input" type="radio" name="Proffesion" id="flexRadioDefault1" checked="admin" value="admin">
         <label class="form-check-label" for="flexRadioDefault1">
           Admin
         </label>
       </div><div class="form-check">
         <input class="form-check-input" type="radio" name="Proffesion" 
         id="flexRadioDefault1" value="hod">
         <label class="form-check-label" for="flexRadioDefault1">
           HOD
         </label>
       </div>

       <div class="form-check">
         <input class="form-check-input" type="radio" name="Proffesion" 
         id="flexRadioDefault1" value="user">
         <label class="form-check-label" for="flexRadioDefault1">
           Student
         </label>
       </div>
 </div>


     
     <hr>
 
     <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p><br>
     <button type="submit" class="registerbtn">Update</button><br>
   div> 
 </form>